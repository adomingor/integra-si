            <a id="btn_menu" class="nav-link ssm-toggle-nav" href="#"><i class="fa fa-bars fa-2x" aria-hidden="true"></i></a>
            <nav id="isi_menu" class="nav" style="padding-left:4px;">
                <div class='list-group'>
                    <div class="row" style="padding-right:15px;">
                        <button type='button' name="isi_lnk_menu" class='close ssm-toggle-nav' aria-label='Close' style='font-size:2em;'> <span aria-hidden='true'>&times;</span> </button>
                    </div>
                    <div class="clearfix" />
                    {% block itemsMenu %}
                        {% include ":menues:principal.html.twig" %}
                    {% endblock %}
                </div>
            </nav>
        {% endblock %}
        {% include '::mensajes.html.twig' %}
    {% endblock %}
    {% block pie%}
        <div class="clearfix" />
        <footer class="text-center text-muted" style="position: fixed; bottom:5px; width:100%;">
            <hr>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid pull-left" style="width:50px; height:50px;" src="{{asset('imagenes/logo_empresa_simple.png')}}" alt="Logo" />

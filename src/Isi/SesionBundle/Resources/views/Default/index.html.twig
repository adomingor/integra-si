{% extends '::base.html.twig' %}
{% block contenido %}
    {{ parent() }}
<div class="container">
    <div class="jumbotron mt-3">
        <p class="h3 text-xs-center">Bienvenid@ {{app.user.username}}</p>
        <img src="data:;base64, {{ app.user.imagen | trim}}" class="mx-auto d-block" alt="Avatar"/>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#miAyuda">
            <i class="fa fa-book fa-lg" aria-hidden="true"></i>&nbsp;haz un recorrido
        </button>
        <div class="modal fade" id="miAyuda" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">La ayuda viene en camino...</h4>
                    </div>
                    <div class="modal-body">
                        Se est√° escribiendo <br>
                        <div class="text-xs-center">
                            <i class="fa fa-font fa-4x" aria-hidden="true"></i>
                            <i class="fa fa-font fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-font fa-2x" aria-hidden="true"></i>
                            <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary-outline" data-dismiss="modal"> cerrar </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

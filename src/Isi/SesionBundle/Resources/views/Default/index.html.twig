{% extends '::base.html.twig' %}
{% block contenido %}
    {{ parent() }}
<div class="container">
    <div class="jumbotron m-t-3">
        <div class="row">
            <div class="col-md-3 offset-md-2 p-t-3">
                <h1 class="d-inlineX"> <span >Bienvenid@</span> </h1>
            </div>
            <div class="col-md-2">
                <img src="data:;base64, {{ app.user.imagen | trim}}" class="m-x-auto d-block" alt="Imágen personal"/>
                <span class="m-x-auto text-xs-center"><h5>{{ app.user.username }}!</h5></span>
            </div>
        </div>
        <br>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#miAyuda">
            <i class="fa fa-book fa-lg" aria-hidden="true"></i>&nbsp;haz un recorrido
        </button>
        <div class="modal fade" id="miAyuda" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">La ayuda viene en camino...</h4>
                    </div>
                    <div class="modal-body">
                        Se está escribiendo <br>
                        <div class="text-xs-center">
                            <i class="fa fa-font fa-4x" aria-hidden="true"></i>
                            <i class="fa fa-font fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-font fa-2x" aria-hidden="true"></i>
                            <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary-outline" data-dismiss="modal"> cerrar </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

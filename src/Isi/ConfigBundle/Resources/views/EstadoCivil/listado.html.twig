{% extends "::base.html.twig" %}
{% block contenido %}
    {{ parent() }}
    {% block persParaTrabajar %}
    {% endblock %}
    <div class="row">
        <div class="col-md-8 offset-md-2" align="middle">
            <div class="card isi_sombra-4x">
                <div class="card-header">
                    Estados civiles
                    <span id="isi_totRegi" name="lst-general" class="tag tag-primary isi_badge">{{totRegi}}</span>
                </div>
                {% if listado is not empty %}
                    <div name="lst-general" class="card-block isi_listado">
                        <div class="row">
                            <div class="col-md-9">
                                {% include "::filtro.html.twig" with {"id_filtro": "inp_txt-filtro", "name_filtro":"lst-general", "id_ayuda":"ayuda"} %}
                            </div>
                            <div class="col-md-3 text-xs-right">
                                <button id="isi_btn_agregar" name="isi_addModal" type="button" title="Nuevo Estado Civil" class="btn btn-primary isi_abrirModal" onclick="$('#est_civiles_descrip').focus();">
                                    &nbsp;<i class="fa fa-plus fa-lg" aria-hidden="true"></i>&nbsp;
                                </button>
                                <a id="isi_lnk_borrarRegs" name="lst-general" title="Eliminar Selección" href="{{path('isi_config_estCivB')}}" class="btn btn-danger isi_elim_reg">
                                    &nbsp;<i class="fa fa-trash fa-lg" aria-hidden="true"></i>&nbsp;
                                </a>
                            </div>
                        </div>
                        <h4 class="card-title"></h4>
                        <div class="table table-striped table-responsive">
                            <table id="isi_lst-general" name="lst-general" class="table table-bordered">
                                <thead id="{{totRegi}}" class="bg-info">
                                    <tr>
                                        <th name="lst-general" class="isi_chkColu">
                                            <input id="isi_inpChk_todos" name="lst-general" type="checkbox" class="isi_chk_grupo" title="Seleccionar todos">
                                            <span id="isi_totChkSel_lst-general" name="lst-general" class="tag tag-primary isi_badge">0</span>
                                        </th>
                                        <th class="">Estado Civil</th>
                                        <th>Cód. Indec</th>
                                        <th class="text-xs-center isi_accColu">
                                            <i class="fa fa-wrench" aria-hidden="true"></i>
                                            <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for regi in listado %}
                                        <tr id="isi_fila_lst-general-{{regi.id | urlencrypt}}">
                                            <label class="isi_filtrable" name="lst-general" for="isi_fila_lst-general-{{regi.id | urlencrypt}}">{{regi.codIndec}} {{regi.descrip|lower}}</label>
                                            <td name="lst-general">
                                                <input id="isi_chkMA{{regi.id | urlencrypt}}" type="checkbox" name="lst-general" value="{{regi.id | urlencrypt}}" class="isi_chkFiltrable">
                                            </td>
                                            <td>{{regi.descrip|capitalize}}</td>
                                            <td>{{regi.codIndec}}</td>
                                            <td class="text-xs-center isi_accColu-2x">
                                                    <a id="isi_lnk_editar{{regi.id | urlencrypt}}" href="{{url('isi_config_estCivM', {'id': regi.id | urlencrypt})}}" title="Editar">
                                                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                                                </a>
                                                <a id="isi_lnk_borrar{{regi.id | urlencrypt}}" class="isi_elim_reg_ctrl" href="{{url('isi_config_estCivB', {'id': regi.id | urlencrypt})}}" title="Borrar">
                                                    <i class="fa fa-trash fa-lg text-danger" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-md-12 text-xs-center">
            <br>
            <a id="isi_lnk_nuevo" class="btn btn-success" title="Agregar un Estado Civil" href="{{url('isi_config_estCivA')}}">
                &nbsp;<i class="fa fa-plus fa-lg" aria-hidden="true"></i>&nbsp;
            </a>
        </div>
    </div>

    <!-- modales -->
    <div id="isi_addModal" class="isi_modal mdl-layout mdl-layout--fixed-header">
        <div class="isi_modalContenido">
            {{ render(controller("IsiConfigBundle:EstadoCivil:formulario", {request: app.request})) }}
        </div>
    </div>
<br>
{% endblock %}
{% block pie %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {# el js esta en el Bundle(IsiConfigBundle por ejemplo) /Resources/public/ js,css,images,etc.
        luego hay que instalarlo via asset
        php bin/console assets:install --symlink
        y se crea un enlace simbolico dentro de raiz/web/bundles/nombreBundleInstalado
    #}
    <!-- <script src="{{ asset('bundles/isiconfig/js/isi_estadoCivil.js') }}" type="text/javascript"></script> -->
{% endblock %}

{% extends "::base.html.twig" %}
{% block contenido %}
    {{ parent() }}
    {% block persParaTrabajar %}
    {% endblock %}
    <div class="row">
        <div class="col-md-8 offset-md-2" align="middle">
            <div class="card isi_sombra-4x">
            <div class="card-header text-capitalize">
                tipo de grupo social
            </div>
                <div class="card-block">
                    {{ form_start(form) }}
                        <div class="">
                            {{ form_errors(form) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.tipo) }}
                            <label class="sr-only" for="tipos_gr_sociales_tipo">Nombre del tipo de gr. soc.</label>
                            {{ form_widget(form.tipo, {"attr": {"class":"form-control", "onfocus":"select();", "onblur":"this.value = this.value.toLowerCase();", "autofocus":"true", "placeholder":"Nombre del tipo de grupo social"}} ) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.descrip) }}
                            <label class="sr-only" for="tipos_gr_sociales_descrip">Descripción</label>
                            {{ form_widget(form.descrip, {"attr": {"class":"form-control", "onblur":"this.value = this.value.toLowerCase();", "placeholder":"Decripción"}} ) }}
                        </div>
                        <div class="form-group">
                            <button id="isi_btnGrabar" type="submit" class="btn btn-success" title="Confirmar">
                                &nbsp;<i class="fa fa-check fa-lg" aria-hidden="true"></i>&nbsp;
                            </button>
                        </div>
                    {{ form_widget(form._token) }} {# Token CSRF sin esto no envia el formulario #}
                    {{ form_end(form, {"render_rest": false}) }} {# de esta forma no estan en la pagina el resto del formulario (usr crea, actu, ip crea, actu, fecha crea, actu) #}
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="text-xs-center">
        <a id="isi_lnk_listado" href="{{url('isi_config_grupoSoc')}}" class="btn btn-secondary" title="Volver al listado">
            &nbsp;<i class="fa fa-list-alt fa-lg" aria-hidden="true"></i>&nbsp;
        </a>
    </div>
{% endblock %}

<div class="row">
    <div class="col-md-12">
        <div class="card isi_sombra-4x">
            <div class="card-header text-xs-center text-capitalize">
                busqueda de personas
                <span id="isi_totRegi" name="lst_resu_pers" class="tag tag-primary isi_badge">{{totRegi}}</span>
            </div>
            <div class="card-block">
                {{ form_start(form, {"attr": {"class": "form-inline", "id": "fBuscaPers"} }) }}
                    <div style="margin-bottom: 15px" class="input-group">
                        {% if form_errors(form) is not empty %}
                            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="input-group w-100">
                        <span class="input-group-addon" style="background:white; width:40px;">
                            <a data-toggle="collapse" href="#F1BusquedaAvzada" aria-expanded="false" aria-controls="collapseExample" class="isi_lnkInfo">
                                <i class="fa fa-info fa-lg text-info " aria-hidden="true"></i>
                            </a>
                        </span>
                        {{ form_errors(form.txtABuscar) }}
                        <span class="input-group-addon" style="width:40px;"><i class="fa fa-search" aria-hidden="true"></i></span>
                        {{ form_widget(form.txtABuscar, {"attr": {"autofocus": "true", "placeholder": "Ingrese el texto a buscar...", "class":"form-control", "required":"true"}}) }}
                        <!-- <span class="input-group-addon" style="background:white;">
                            {{ form_errors(form.chkCard) }}
                            &nbsp;&nbsp;&nbsp;{{ form_widget(form.chkCard, {"attr": {"title": "Ver como tarjetas"}}) }}
                            <i class="fa fa-th fa-lg" style="color:#587996;" aria-hidden="true"></i>
                        </span> -->
                    </div>
                {{ form_end(form) }}
                {% include "IsiPersonaBundle:Default:F1Busqueda.html.twig" %}
            </div>
        </div>
    </div>
</div>

{% extends '::index.html.twig' %}

{% block contenido %}
<div class="isi_centrar-horiz">
    {{ parent() }}
    <h5>
        <span id="isi_totRegi_chkGLG" name="chkGLG" class="mdl-badge" data-badge="{{totRegi}}">Géneros</span>
        <a id="isi_btn_addIdenGen" name="isi_addIdenGen" href="{{path('isi_config_generoNuevo')}}" class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored">
            <i class="material-icons">add</i>
        </a>
        {% if listado is not empty %}
            <div id="isi_busqListad_chkGLG" class="mdl-textfield mdl-js-textfield mdl-textfield--expandable">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="isi_inpTxt_buscar">
                    <i class="material-icons">search</i>
                </label>
                <div class="mdl-textfield__expandable-holder">
                    <input id="isi_inpTxt_buscar" name="chkGLG" class="mdl-textfield__input isi_filtrar-busqueda" type="text">
                    <label class="mdl-textfield__text" for="isi_inpTxt_buscar"></label>
                </div>
            </div>
        {% endif %}
    </h5>
    {% if listado is not empty %}
        <label name="chkGLG" class="isi_centrar-horiz mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="isi_inpChk_todos">
            <input id="isi_inpChk_todos" name="chkGLG" type="checkbox" class="isi_chk_grupo mdl-checkbox__input">
            <span id="isi_totChkSel_chkGLG" name="chkGLG" class="mdl-checkbox__label mdl-badge mdl-badge--overlap" data-badge="0"></span>
        </label>
        <button id="isi_btn_elimRegSel" name="chkGLG" href="{{path('isi_config_estadoCivilBorrar')}}" class="isi_elim_reg mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab">
            <i class="material-icons">delete</i>
        </button>
        <ul class="mdl-list isi_centrar-horiz">
            <li class="mdl-menu__item--full-bleed-divider"></li>
            {% for regi in listado %}
                <li id="isi_tr_chkGLG{{regi.id}}" name="chkGLG" value="{{regi.genero|lower}}" class="isi_filtrable mdl-list__item mdl-list__item--three-line mdl-menu__item--full-bleed-divider">
                    <span name="chkGLG" class=".mdl-list__item-secondary-action">
                        <label name="chkGLG" value="{{regi.genero|lower}}" class="isi_filtrable mdl-checkbox mdl-js-checkbox mdl-data-table__select mdl-js-ripple-effect" for="isi_chkMA{{regi.id}}">
                            <input id="isi_chkMA{{regi.id}}" type="checkbox" name="chkGLG" value="{{regi.id}}" class="mdl-checkbox__input">
                        </label>
                    </span>
                    <span name="chkGLG" class="mdl-list__item-primary-content" style="text-align:left;">
                        <i class="material-icons mdl-list__item-avatar">fingerprint</i>
                        <span>{{regi.genero|title}}</span>
                        <span class="mdl-list__item-text-body">
                            {{regi.descrip|capitalize}}
                        </span>
                    </span>
                    <span name="chkGLG" class="mdl-list__item-secondary-content">
                        <a id="isi_lnk_editar{{regi.id}}" name="chkGLG" href="{{url('isi_config_generoEdicion', {'id': regi.id})}}" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored mdl-list__item-secondary-action">
                            <i class="material-icons">mode_edit</i>
                        </a>
                    </span>
                </li>
            {% endfor %}
        </ul>
        <br>
    {% endif %}
</div>

<!-- ayudas -->
<div class="mdl-tooltip mdl-tooltip--large" for="isi_btn_addIdenGen">Agregue un género</div>
<div class="mdl-tooltip mdl-tooltip--large" for="isi_totChkSel_chkGLG">Seleccionar todos</div>
<div class="mdl-tooltip mdl-tooltip--large" for="isi_lnk_editar">Editar</div>
<div class="mdl-tooltip mdl-tooltip--large" for="isi_btn_elimRegSel">Eliminar selección</div>

{% endblock %}
{% block pie%}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {# el js esta en el Bundle(IsiPersonaBundle por ejemplo) /Resources/public/ js,css,images,etc.
        luego hay que instalarlo via asset
        php bin/console assets:install --symlink
        y se crea un enlace simbolico dentro de raiz/web/bundles/nombreBundleInstalado
    #}
    <script src="{{ asset('bundles/isipersona/js/isi_estadoCivil.js') }}" type="text/javascript"></script>
{% endblock %}

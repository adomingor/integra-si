{% extends '::index.html.twig' %}

{% block titulo%}
    Estado Civil
{% endblock %}

{#% block menuItems%}
    {% include ":menues:VISTA_item.html.twig" %}
{% endblock %#}

{% block contenido %}
<div class="isi_centrar-horiz">
    {{ parent() }}
    <div id="isi_msjProcesando" class='mdl-spinner mdl-js-spinner is-active isi_quitarElemento'></div>
    {% if listado is not empty %}
        <!-- <div id="isi_msjProcesando" class="mdl-progress mdl-js-progress mdl-progress__indeterminate isi_centrar-horiz isi_quitarElemento"></div> -->
        <div id="tituTLista" class="">
            <h5>
                <span class="mdl-badge" data-badge="{{totRegi}}">Estados Civiles</span>
                <a id="estCivNuevo" class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" href="{{url('isi_config_estadoCivilNuevo')}}" title="Agregar un Estado Civil">
                    <i class="material-icons">add</i>
                </a>
            </h5>
        </div>
        <table id="tLista" class="mdl-data-table mdl-shadow--2dp isi_centrar-horiz">
            <thead id="{{totRegi}}">
                <tr>
                    <th id="isi_cabChkTodos" name="isi_verSiNo" class="isi_quitarElemento">
                        <!-- <label class="mdl-icon-toggle mdl-js-icon-toggle mdl-js-ripple-effect isi_no_clase" for="isi_checkTodos" title="Seleccionar todos">
                            <input type="checkbox" id="isi_checkTodos" class="mdl-icon-toggle__input">
                            <i class="mdl-icon-toggle__label material-icons">playlist_add_check</i>
                        </label> -->
                        <label name="isi_checkTodos" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect isi_no_clase" for="isi_checkTodos" title="Seleccionar todos">
                            <input type="checkbox" id="isi_checkTodos" class="mdl-checkbox__input">
                            <span class="mdl-checkbox__label"></span>
                        </label>
                    </th>
                    <!-- <th> Id </th> -->
                    <th class="mdl-data-table__cell--non-numeric">Estado Civil</th>
                    <th>Cód. Indec</th>
                    <th>
                        <button id="menuTLista" class="mdl-button mdl-js-button mdl-button--icon" title="Acciones múltiples">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-js-menu mdl-menu--bottom-right mdl-js-ripple-effect" for="menuTLista">
                            <a id="isi_verChekTodos" href="#" class="mdl-menu__item mdl-menu__item--full-bleed-divider">
                                Mostrar MultiCheck
                            </a>
                            <li></li>
                            <a id="isi_borrarRegs" href="{{path('isi_config_estadoCivilBorrar')}}" class="mdl-menu__item">
                                Eliminar selección
                            </a>
                        </ul>

                        <!-- <i class="material-icons">more_horiz</i> -->
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for ec in listado %}
                    <tr id="isi_fila_{{ec.id}}">
                        <td name="isi_verSiNo" class="isi_quitarElemento">
                            <label name="isi_chkMultiAccion" class="mdl-checkbox mdl-js-checkbox isi_no_clase mdl-data-table__select mdl-js-ripple-effect" for="isi_chkMA{{ec.id}}">
                                <input type="checkbox" id="isi_chkMA{{ec.id}}" name="isi_chkMultiAccion" value="{{ec.id}}" class="mdl-checkbox__input">
                            </label>
                        </td>
                        <!-- <td> {{ec.id}} </td> -->
                        <td class="mdl-data-table__cell--non-numeric">{{ec.descrip}}</td>
                        <td>{{ ec.codIndec }}</td>
                        <td class="mdl-data-table__cell--non-numeric">
                            <a href="{{url('isi_config_estadoCivilEdicion', {'id': ec.id})}}" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored" title="Editar elemento">
                                <i class="material-icons">mode_edit</i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div id="tituTLista" class="">
            <h5>
                <span class="mdl-badge" data-badge="0">Estados Civiles</span>
                <a id="estCivNuevo" class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" href="{{url('isi_config_estadoCivilNuevo')}}" title="Agregar un Estado Civil">
                    <i class="material-icons">add</i>
                </a>
            </h5>
        </div>
    {% endif %}
</div>
<!-- mensajes toast/snack -->
<div id="msjToastSnack" aria-live="assertive" aria-atomic="true" aria-relevant="text" class="mdl-snackbar mdl-js-snackbar">
    <div class="mdl-snackbar__text"></div>
    <button type="button" class="mdl-snackbar__action"></button>
</div>

